<main class="contenedor contenedor-formularios no-padding">
  <h1><%= nombrePagina %></h1>
  <form class="default-form" method="post">
    <div class="campo">
      <label for="nombre">Nombre</label>
      <input type="text" name="nombre" placeholder="React Medellin" value="<%= grupo.nombre %>">
    </div>
    <div class="campo descripcion">
      <label for="descripcion">Descripci√≥n</label>
      <div class="contenedor-editor">
        <input type="hidden" id="x" name="descripcion" value="<%= grupo.descripcion %>">
        <trix-editor input="x"></trix-editor>
      </div>
    </div>
    <div class="campo">
      <label for="categoria">Categoria</label>
      <select name="categoria">
        <option value="" disabled>--Selecciona--</option>
        <% categorias.forEach(categoria => { %>
          <option <%= categoria.id === grupo.categoriaId ? 'selected' : '' %> value="<%= categoria.id %>"><%= categoria.nombre %></option>
        <% }) %>
      </select>
    </div>
    <div class="campo">
      <label for="url">Sitio Web</label>
      <input type="url" name="url" placeholder="reactmedellin.com" value="<%= grupo.url %>">
    </div>
    <div class="campo enviar">
      <input type="submit" value="Guardar Cambios" class="btn btn-rosa">
    </div>
  </form>
</main>